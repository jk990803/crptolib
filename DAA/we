<template> 
    <!--注意DOM参数绑定需要使用v-bind，且仅有html属性名忽略大小写，html属性参数和属性值均不忽略大小写-->
    <div id="TestCom">
        <button v-if="seen" v-on:click="onClickButton">点击显示确认框</button>
        <DialogCom v-if="!seen" 
            v-on:verifyClicked="verifyClickedHandler"   
            v-on:cancelClicked="cancelClickedHandler"     
            v-bind:hint="hint"></DialogCom>
    </div>
</template>

<script>
import DialogCom from './DialogCom'
export default {
    name: "TestCom",

    data() {
        return {
            result: true,
            hint:"对话框提示",
            seen: true
        }
    },

    components: {
        DialogCom
    },
    
    methods:
    {
        verifyClickedHandler(param) {
            this.result=true;
            this.checkres=param;
            this.seen=!this.seen;    // 对话框功能执行完毕，隐藏对话框，重新显示按钮
            console.log("用户选择了确认");
        },

        cancelClickedHandler(param) {
            this.result=false;
            this.checkres=param; 
            this.seen=!this.seen;    // 对话框功能执行完毕，隐藏对话框，重新显示按钮
            console.log("用户选择了取消");
        },

        onClickButton() {
            this.seen=!this.seen;    // 用户点击按钮后，隐藏按钮，展示对话框    
        }
    }
}
</script>
